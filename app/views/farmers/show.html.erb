
<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>


<div class="row content mt-3">
  <div class="col-md-4 d-flex justify-content-center">
    <%= image_tag farmer_pic(@farmer) , alt: "#{@farmer.name} image", class: 'mt-2', style: 'width:80%;' %>
  </div>
  <div class="col-md-8 text-align-center">
  
    <div>
      <strong>Farmer:  </strong>
      <span><%= @farmer.name %></span>
    </div>

    <div>
      <strong>Fruit Types:  </strong>
      <span><%= @farmer.fruit_types %></span>
    </div>

    <div>
      <strong>Address:  </strong>
      <span><%= @farmer.address %></span>
    </div>

    <div>
      <strong>Introduction:  </strong>
      <span><%= @farmer.introduction %></span>
    </div>

   
    
    
    <div class="show-edit-delete">

       <% if (current_user.farmer == @farmer) || current_user.admin? %>
          <%= link_to 'Edit', edit_farmer_path(@farmer), class: 'btn btn-info sm'%>
          <%= link_to 'Delete', farmer_path(@farmer), method: :delete, class: 'btn btn-danger sm', data: { confirm: "Really delete #{@farmer.name}?"} %>
      <% end %>
      <%= link_to 'Back', farmers_path, class: 'btn btn-primary sm' %>   
              
    </div>

  </div>
</div>
