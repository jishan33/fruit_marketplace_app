
  <div class="card my-3 col-md-4 col-xs-12" style="max-width:18%; min-width:18rem;">
    <%= image_tag picture_for(product) , alt: "#{product.title} image", class: 'card-img-top img_fluid mt-3' %>

    <div class="card-body">
      <h6 class="card-title"><%= product.title %></h6>
      <h6 class="card-text mb-2 text-muted">Quantity: <%= product.quantity %></h6>

      <h6 class="card-subtitle mb-2 text-muted">Price: <%= number_to_currency(product.price) %> aud</h6>
    

      <%= link_to product_path(product) do %>
        <%= image_tag 'view.png', size: '40x40' %>
      <% end %>
    
      <% if user_signed_in? %>
        <%= link_to carts_path(product_id: product.id), method: :post do %> 
          <%= image_tag 'add-to.png', size: '35x35' %>
        <% end %>

      
        <% if current_user.user_type == "farmer" && current_user.farmer == product.farmer || current_user.admin? %>
        
          <%= link_to edit_product_path(product.id) do %>
            <%= image_tag 'edit.png', size: '30x30' %>
          <% end %>

          <%= link_to product_path(product.id), method: :delete, data: {
            confirm: "Delete #{product.title} confrimed?"
          } do %> 
            <%= image_tag 'delete.png', size: '30x30' %>
          <% end %> 
        <% end %>

      <% else %>
        <%= link_to user_session_path do %> 
          <%= image_tag 'add-to.png', size: '35x35' %>
        <% end %>

      

      <% end %>


     
 
      
        
    </div>

  </div>
