
<div class="card text-center my-3 col-md-4 col-xs-12" style="max-width:30%; min-width:18rem;">
  <%= image_tag picture_for(product) , alt: "#{product.title} image", class: 'card-img-top img_fluid' %>
  <div class="card-body">
    <h5 class="card-title"><%= product.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= product.rank %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><%= product.quantity %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><%= product.price %></h6>
    <p class="card-text"><%= product.description %></p>
    <%= link_to 'View', product_path(product), class: 'btn btn-primary' %>
    
       <%= link_to 'Edit', edit_product_path(product.id), class: 'btn btn-info'%>
        <%= link_to 'Delete', product_path(product.id), method: :delete, class: 'btn btn-danger', data: { confirm: "Really delete #{product.title}?"} %>
      <% end %>
      
  </div>
</div>