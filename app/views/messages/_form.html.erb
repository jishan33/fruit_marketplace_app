

<%= form_with(model: [@farmer, @farmer.messages.build ], local: true) do |form| %>

<div class="form-row">
  <%= form.label :sender %>
  <%= form.text_field :sender, class: "form-control" %>
</div>

<div class="form-row mt-2">
  <%= form.label :body %>
  <%= form.text_area :body, class: "form-control" %>
</div>

<div class="d-flex justify-content-end mt-3 mb-1" id="create-message">
  <%= form.submit %>
</div>

<% end %>

