<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
 

  <%= hidden_field(:user, :user_type, :value => @is_farmer_registration ? "farmer" : "normal")%>

  <% if @is_farmer_registration %>
    <%= nested_form_for([resource_name, resource.with_farmer], url: registration_path(resource_name)) do |j| %>

    <%= j.fields_for :farmer do |i| %>

      <div class="field">
        <%= i.label :name %><br />
        <%= i.text_field :name %>
      </div>

      <div class="field">
        <%= i.label :address %><br />
        <%= i.text_field :address, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= i.label :fruit_types %><br />
        <%= i.text_field :fruit_types %>
      </div>

      <div class="field">
        <%= i.label :introduction %><br />
        <%= i.text_field :introduction %>
      </div>

      <div class="filed">
        <%= i.label :picture %>
        <%= i.file_field :picture %>
      </div>

  

      <div class="actions">
          <%= flash[:recaptcha_error] %>
  <%= recaptcha_tags %>
    <%= f.submit "Sign up" %>
  </div>

      <% end %>
    <% end %>
  <% end %>

  <% if !@is_farmer_registration %>
      <%= flash[:recaptcha_error] %>
  <%= recaptcha_tags %>
      <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>
<% end %>


<%= render "devise/shared/links" %>
